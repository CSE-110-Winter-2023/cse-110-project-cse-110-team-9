<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="369dp"
            android:layout_height="365dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.567"
            app:srcCompat="@drawable/cface" />

        <ImageView
            android:id="@+id/compassImg"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintCircle="@+id/imageView"
            app:layout_constraintCircleAngle="210"
            app:layout_constraintCircleRadius="170dp"
            app:srcCompat="@mipmap/ic_launcher"
            tools:layout_editor_absoluteX="107dp"
            tools:layout_editor_absoluteY="541dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/locationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Can't get location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.221" />

    <edu.ucsd.cse110.cse_110_project_cse_110_team_9.CompassView
        android:id="@+id/compass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:backgroundColor="#000000"
        app:degrees="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lineColor="#FFFFFF"
        app:markerColor="#FF0000"
        app:rangeDegrees="180.0"
        app:showMarker="true"
        app:textColor="#FFFFFF"
        app:textSize="15sp" />


</androidx.constraintlayout.widget.ConstraintLayout>