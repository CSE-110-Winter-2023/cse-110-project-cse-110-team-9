<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="415dp"
            android:layout_height="471dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.567"
            app:srcCompat="@drawable/cface" />

        <Button
            android:id="@+id/ToDataEntryBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onLaunchDataEntry"
            android:text="Add Friends ->"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.939"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.976" />

        <!--        <androidx.recyclerview.widget.RecyclerView-->
        <!--            android:id="@+id/locations"-->
        <!--            android:layout_width="199dp"-->
        <!--            android:layout_height="89dp"-->
        <!--            app:layout_constraintBottom_toBottomOf="parent"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintHorizontal_bias="0.075"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="parent"-->
        <!--            app:layout_constraintVertical_bias="0.975" />-->

        <TextView
            android:id="@+id/locationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Can't get location"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.132" />

        <TextView
            android:id="@+id/public_uid_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="null"
            android:textIsSelectable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/locationText" />

        <ImageView
            android:id="@+id/parentsImageView"
            android:layout_width="39dp"
            android:layout_height="32dp"
            android:visibility="invisible"
            app:layout_constraintCircle="@+id/imageView"
            app:layout_constraintCircleAngle="210"
            app:layout_constraintCircleRadius="170dp"
            app:srcCompat="@drawable/greendot"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="504dp" />

        <TextView
            android:id="@+id/parentsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/parentsImageView"
            app:layout_constraintEnd_toStartOf="@+id/parentsImageView"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toEndOf="@+id/parentsImageView"
            app:layout_constraintTop_toTopOf="@+id/parentsImageView"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/compassImg"
            android:layout_width="32dp"
            android:layout_height="32dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.529"
            app:srcCompat="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/ToSetDegreePageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onLaunchDegree"
            android:text="Set Degree ->"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.943"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.888" />

        <Button
            android:id="@+id/ToSetNamePageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onLaunchName"
            android:text="Set Name ->"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.049"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.888" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <edu.ucsd.cse110.cse_110_project_cse_110_team_9.CompassView
        android:id="@+id/compass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:backgroundColor="#000000"
        app:degrees="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lineColor="#FFFFFF"
        app:markerColor="#FF0000"
        app:rangeDegrees="180.0"
        app:showMarker="true"
        app:textColor="#FFFFFF"
        app:textSize="15sp" />


</androidx.constraintlayout.widget.ConstraintLayout>